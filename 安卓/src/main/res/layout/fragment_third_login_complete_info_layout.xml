<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/img_logo_login" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <EditText
            android:id="@+id/mEtCompleteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/img_icon_phone"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/mIvCompleteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@drawable/img_icon_delete" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#eee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <EditText
            android:id="@+id/mEtCompleteCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/img_icon_validation"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入验证码"
            android:inputType="number"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/mTvCompleteGetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:minWidth="70dp"
            android:src="@drawable/img_icon_delete"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/select_bt_text_color_2" />

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/mTvCompleteGetCode"
            android:background="@color/text_color" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#eee" />

    <Button
        android:id="@+id/mBtCompleteLogin"
        style="@style/style_button1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:text="提交" />

</LinearLayout>