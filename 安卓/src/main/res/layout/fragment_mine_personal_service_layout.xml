<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="联系电话"
                android:textColor="@color/text_deep_dark_color"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/mEtMinePersonalServicePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginLeft="80dp"
                android:hint="请输入联系电话"
                android:inputType="phone"
                android:maxLength="11"
                android:gravity="right"
                android:minWidth="100dp"
                android:textColor="@color/text_dark_color"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务地址"
                android:textColor="@color/text_deep_dark_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/mEtMinePersonalServiceAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:text="请选择服务地址"
                android:gravity="right"
                android:minWidth="100dp"
                android:textColor="@color/text_dark_color"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="详细地址"
                android:textColor="@color/text_deep_dark_color"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/mEtMinePersonalServiceDetailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:hint="请输入服务详细地址"
                android:gravity="right"
                android:minWidth="100dp"
                android:textColor="@color/text_dark_color"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:id="@+id/mRlServiceEditWorkRangeContainer"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="主营种类"
                android:textColor="@color/text_deep_dark_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/mTvServiceEditWorkRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginLeft="80dp"
                android:gravity="right"
                android:drawableRight="@drawable/icon_inter1"
                android:text="请选择主营各类"
                android:textColor="@color/text_dark_color"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="营业时间"
                android:textColor="@color/text_deep_dark_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/mTvServiceEditWorkStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/mTvServiceEditWorkTimeLine"
                android:background="@drawable/shape_tv_bg2"
                android:gravity="center"
                android:maxLength="11"
                android:minWidth="60dp"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="5dp"
                android:textColor="@color/text_deep_dark_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/mTvServiceEditWorkTimeLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/mTvServiceEditWorkEndTime"
                android:text="~" />

            <TextView
                android:id="@+id/mTvServiceEditWorkEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_tv_bg2"
                android:gravity="center"
                android:maxLength="11"
                android:minWidth="60dp"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="5dp"
                android:textColor="@color/text_deep_dark_color"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#f5f5f5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="@dimen/dp_10"
            android:text="服务介绍"
            android:textColor="@color/text_deep_dark_color"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mEtMinePersonalServiceContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="#F5F5F5 "
                android:gravity="top"
                android:hint="服务如何，写出您想说的（最多150字）"
                android:maxLength="150"
                android:minLines="6"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <Button
                android:id="@+id/mBtMinePersonalServiceEditSubmit"
                style="@style/style_button1"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:enabled="false"
                android:text="保存"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>