<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:background="@drawable/shape_et_bg2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTvEnsureMoneyProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="安装门店保证金"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/mTvEnsureMoneyProductCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_color"
            tools:text="￥20000"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10" />

    </LinearLayout>

    <Button
        android:id="@+id/mBtEnsureMoneyProductAction"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/shape_bt_bg1"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:text="去缴纳"
        android:layout_alignParentRight="true" />
</RelativeLayout>