<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/mSvOrderDetailInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mTvOrderDetailForHavingWorkName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_deep_dark_color"
                        android:textSize="@dimen/sp_16"
                        tools:text="王大宝" />

                    <TextView
                        android:id="@+id/mTvOrderDetailForHavingWorkStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        tools:text="已结算" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/mTvOrderDetailForHavingWorkPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:autoLink="phone"
                    android:textColor="@color/text_dark_color"
                    tools:text="手机号码：185454578954" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约时间"
                        android:textColor="@color/text_deep_dark_color"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/mTvOrderDetailForHavingWorkYTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_dark_color"
                        tools:text="2018-1-21" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#eee" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商品"
                    android:textColor="@color/text_deep_dark_color"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/mTvOrderDetailForHavingWorkContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#f5f5f5"
                    android:padding="@dimen/dp_10"
                    tools:text="备注：一切绚丽的赞美词一切绚丽的赞美词一切绚丽的赞美词一切绚丽的赞美词一切绚丽的赞美词" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修服务"
                        android:textColor="@color/text_deep_dark_color"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/mTvOrderDetailForWaitingWorkPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_deep_dark_color"
                        tools:text="25" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:layout_toLeftOf="@+id/mTvOrderDetailForWaitingWorkPrice"
                        android:text="X1"
                        android:textColor="@color/text_deep_dark_color" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#eee" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单信息"
                    android:textColor="@color/text_deep_dark_color"
                    android:textSize="@dimen/sp_16" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单人"
                        android:textColor="@color/text_dark_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/mTvOrderDetailForHavingWorkOrderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_deep_dark_color"
                        tools:text="王大宝" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单号"
                        android:textColor="@color/text_dark_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/mTvOrderDetailForHavingWorkSN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_deep_dark_color"
                        tools:text="16546313201321" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单时间"
                        android:textColor="@color/text_dark_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/mTvOrderDetailForHavingWorkOrderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_deep_dark_color"
                        tools:text="2017-01-18" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/mLlOrderDetailTimesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#eee" />

                <TextView
                    android:id="@+id/mTvOrderDetailImageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="施工照片"
                    android:textColor="@color/text_deep_dark_color"
                    android:textSize="@dimen/sp_16" />

                <com.android.ql.lf.carapp.ui.views.ImageContainerLinearLayout
                    android:id="@+id/mICllOrderDetailImageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10" />

                <View
                    android:id="@+id/mViewOrderDetailImageLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eee" />

                <TextView
                    android:id="@+id/mTvOrderDetailForHavingWorkAllMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_16"
                    tools:text="总价：￥14.5" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/mTvOrderDetailLoadFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_bt_bg4"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="详情加载失败，点击重试……"
        android:textColor="@color/colorPrimary"
        android:visibility="gone" />
</FrameLayout>