<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_main_mall_item_bg"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mTvGoodsInfoItemPic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_glide_load_default" />

        <TextView
            android:id="@+id/mTvGoodsInfoItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_deep_dark_color"
            android:textSize="@dimen/sp_12"
            tools:text="佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mTvGoodsInfoItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥250.00"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/mTvGoodsInfoItemShoppingCar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:src="@drawable/img_icon_shoppingcart_yellow" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/mIvGoodsInfoItemCollection"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_gravity="right"
        android:src="@drawable/img_icon_goods_unselect" />
</FrameLayout>