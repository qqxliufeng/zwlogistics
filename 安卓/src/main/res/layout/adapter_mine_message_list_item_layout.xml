<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_press_bg"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mIvMineMessageListIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_icon_message_for_system" />

        <View
            android:id="@+id/mViewMineMessageListNotify"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="right"
            android:background="@drawable/shape_view_notify_bg" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/mTvMineMessageListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#323232"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/mTvMineMessageListDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#909090 "
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


</LinearLayout>