<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_share_code_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_ll_mine_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/deepTextColor"
            android:text="您的专属二维码"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/mTvInviteCodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="ADSDFASFD"
            android:layout_marginTop="5dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/mBtInviteCodeCopy"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            style="@style/button_style1"
            android:layout_marginTop="@dimen/dp_10"
            android:text="复制"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="-15dp"
                android:background="@drawable/shape_share_code_left_circle"/>

            <View
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layerType="software"
                android:background="@drawable/shape_share_code_center_line"/>

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-15dp"
                android:background="@drawable/shape_share_code_right_circle"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="奖励规则"
            android:gravity="center"
            android:textColor="@color/deepTextColor"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="把APP邀请码分享给好友，且好友成功注册并完成认证，您可以获得20元奖励哦~"
            android:gravity="center"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/mIvInviteCode"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/mBtInviteCodeShare"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            style="@style/button_style1"
            android:text="立即分享"/>

    </LinearLayout>

</LinearLayout>