<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <CheckedTextView
            android:id="@+id/mTvMinePersonAuth1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_tv_bg6"
            android:checked="true"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <CheckedTextView
            android:id="@+id/mTvMinePersonLine"
            android:layout_width="120dp"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mTvMinePersonAuth2"
            android:layout_toRightOf="@+id/mTvMinePersonAuth1"
            android:background="@drawable/shape_tv_bg8"
            android:checked="true" />

        <CheckedTextView
            android:id="@+id/mTvMinePersonAuth2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_tv_bg7"
            android:gravity="center"
            android:text="2"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/mTvMinePersonDes1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:text="个人信息和头像"
            android:textAlignment="gravity"
            android:textColor="@color/select_tv_color2"
            android:textSize="@dimen/sp_12" />

        <CheckedTextView
            android:id="@+id/mTvMinePersonDes2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="车辆信息"
            android:textAlignment="gravity"
            android:textColor="@color/select_tv_color3"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>
</merge>