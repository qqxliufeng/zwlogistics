<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="5dp"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="5dp"
    android:background="@drawable/shape_ll_order_item_bg"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/mIvOrderItemPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/test_index_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTvOrderItemAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            tools:text="济南 历城  -> 北京 东城"
            android:textColor="@color/deepTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTvOrderItemParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="middle"
            android:singleLine="true"
            tools:text="重量：5吨  体积：10立方米"
            android:textColor="@color/deepTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mTvOrderItemZX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="middle"
            android:singleLine="true"
            tools:text="装卸方式：一装一卸"
            android:textColor="@color/deepTextColor"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mTvOrderItemPayType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                tools:text="付款方式：全现金"
                android:textColor="@color/deepTextColor"
                android:layout_marginRight="50dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mTvOrderItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>