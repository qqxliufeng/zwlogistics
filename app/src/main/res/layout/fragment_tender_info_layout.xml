<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/sp_14" />

        <com.android.ql.lf.zwlogistics.ui.widgets.DJEditText
            android:id="@+id/mEtTenderInfoPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:hint="请输入联系电话"
            android:textColor="@color/deepTextColor"
            android:textColorHint="@color/normalTextColor"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的报价"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/sp_14" />

        <com.android.ql.lf.zwlogistics.ui.widgets.DJEditText
            android:drawableLeft="@drawable/icon_money"
            android:drawablePadding="5dp"
            android:id="@+id/mEtTenderInfoPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:hint="请输入报价（单位：元）"
            android:inputType="numberDecimal"
            android:textColor="@color/deepTextColor"
            android:textColorHint="@color/normalTextColor"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:id="@+id/mLlTenderInfoCarType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运载车型"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/mTvTenderInfoCarType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:text="汽车型号名称"
            android:drawableRight="@drawable/icon_enter_gray"
            android:textColor="@color/deepTextColor"
            android:textColorHint="@color/normalTextColor"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="备注"
        android:textColor="@color/normalTextColor"
        android:textSize="@dimen/sp_14" />

    <com.android.ql.lf.zwlogistics.ui.widgets.DJEditText
        android:id="@+id/mEtTenderInfoRemark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_tv_bg3"
        android:gravity="top|left"
        android:minLines="5"
        android:maxLength="200"
        android:hint="请输入备注信息(最多200字)"
        android:textColorHint="@color/normalTextColor"
        android:padding="@dimen/dp_10"
        android:textColor="@color/deepTextColor"
        android:textSize="@dimen/sp_14" />


    <Button
        android:id="@+id/mBtTenderInfoSubmit"
        style="@style/button_style1"
        android:text="确认竞标" />

</LinearLayout>