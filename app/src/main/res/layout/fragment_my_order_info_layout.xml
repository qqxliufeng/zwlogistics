<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_order_info" />

            <LinearLayout
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_ll_order_item_bg"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/shape_tv_left"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="竞标信息"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mTvOrderInfoOrderPhone"
                    style="@style/tv_order_info_style"
                    android:text="联系电话：暂无" />

                <TextView
                    android:id="@+id/mTvOrderInfoOrderPrice"
                    style="@style/tv_order_info_style"
                    android:text="我的报价：暂无" />

                <TextView
                    android:id="@+id/mTvOrderInfoOrderCarTpe"
                    style="@style/tv_order_info_style"
                    android:text="运载车型：暂无" />


                <TextView
                    android:id="@+id/mTvOrderInfoOrderUserRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="备注：暂无"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/mTvOrderInfoPic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_index_item_info" />

    </FrameLayout>


</android.support.v4.widget.NestedScrollView>