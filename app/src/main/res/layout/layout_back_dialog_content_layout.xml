<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/img_back_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mTvBackDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="身份认证通过才能\n参与竞标，建议继续完善资料~"
        android:textColor="#fff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mBtBackDialogCancel"
            style="@style/button_style1"
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:text="放弃" />

        <Button
            android:id="@+id/mBtBackDialogContinue"
            style="@style/button_style1"
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:text="继续完善" />
    </LinearLayout>


</RelativeLayout>